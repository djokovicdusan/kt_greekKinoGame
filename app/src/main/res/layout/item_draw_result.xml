<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="drawResult"
            type="com.example.kt_greekkinogame.model.DrawResult" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/item_background_night"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/drawTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:paddingBottom="4dp"
            tools:text="Draw Time: 30/07/2024 14:35:00" />

        <TextView
            android:id="@+id/drawIdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            tools:text="Draw ID: 1110257" />

        <LinearLayout
            android:id="@+id/winningNumbersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/bonusNumbersText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bonus Numbers"
            android:textSize="14sp"
            android:textColor="@android:color/holo_orange_light"
            android:paddingTop="4dp"
            tools:text="Bonus Numbers: 44" />

    </LinearLayout>
</layout>
